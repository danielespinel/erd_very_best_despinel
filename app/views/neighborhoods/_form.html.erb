<% was_validated = neighborhood.errors.any? %>

<%= form_with(model: neighborhood, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% neighborhood_name_class = "form-control" %>
    <% neighborhood_name_was_invalid = neighborhood.errors.include?(:neighborhood_name) %>

    <% if was_validated %>
      <% if neighborhood_name_was_invalid %>
        <% neighborhood_name_class << " is-invalid" %>
      <% else %>
        <% neighborhood_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :neighborhood_name %>
    <%= f.text_field :neighborhood_name, class: neighborhood_name_class, placeholder: "Enter neighborhood name" %>
    <% if neighborhood_name_was_invalid %>
      <% neighborhood.errors.full_messages_for(:neighborhood_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
