<% was_validated = cuisine.errors.any? %>

<%= form_with(model: cuisine, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% cuisine_name_class = "form-control" %>
    <% cuisine_name_was_invalid = cuisine.errors.include?(:cuisine_name) %>

    <% if was_validated %>
      <% if cuisine_name_was_invalid %>
        <% cuisine_name_class << " is-invalid" %>
      <% else %>
        <% cuisine_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :cuisine_name %>
    <%= f.text_field :cuisine_name, class: cuisine_name_class, placeholder: "Enter cuisine name" %>
    <% if cuisine_name_was_invalid %>
      <% cuisine.errors.full_messages_for(:cuisine_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
